[core]
  pager        = less
  editor       = nvim
  excludesfile = ~/.gitignore
  quotepath = false
[color]
  status          = auto
  diff            = auto
[alias]
  s               = status -bs
  d               = diff
  ci              = commit -v
  fixup           = commit --amend -C HEAD
  co              = checkout
  ad              = add
  l               = log --decorate
  lp              = log --decorate --stat --patch
  ls              = ls-files
  br              = branch --verbose --verbose --color
  f               = fetch
  g               = grep --line-number --show-function --color --heading --break
  sha             = log --pretty="%H"
  fu              = fetch upstream
  rum             = rebase upstream/master
  rom             = rebase origin/master
  tb              = git-tb
  bk              = git-bk
  lom             = "!sh -c 'git log --decorate --stat --patch --reverse $(git merge-base --fork-point origin/master)..HEAD'"
[user]
  name            = Daisuke Fujimura
  email           = me@fujimuradaisuke.com
[github]
  user            = fujimura
[push]
  default         = simple
[diff "exif"]
  textconv = exiftool
[merge]
  tool = vimdiff
[diff]
	algorithm = patience
