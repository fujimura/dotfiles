[
  {
    "key": "ctrl+[",
    "command": "extension.vim_escape",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+d",
    "command": "deleteRight",
    "when": "vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+h",
    "command": "deleteLeft",
    "when": "vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+k",
    "command": "editor.action.clipboardCutAction",
    "when": "vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+w",
    "command": "editor.action.clipboardCutAction",
    "when": "vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+y",
    "command": "editor.action.clipboardPasteAction",
    "when": "vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+f",
    "command": "cursorRight",
    "when": "vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+b",
    "command": "cursorLeft",
    "when": "vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+n",
    "command": "cursorDown",
    "when": "vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+p",
    "command": "cursorUp",
    "when": "vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+a",
    "command": "cursorHome",
    "when": "vim.mode == 'Insert'"
  },
  {
    "key": "ctrl+e",
    "command": "cursorEnd",
    "when": "vim.mode == 'Insert'"
  }
]
